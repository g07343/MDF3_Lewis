<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@id/decorate_HelperText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#50000000"
        android:gravity="center"
        android:text="@string/decorate_helperLabel"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    tools:ignore="UselessParent" >

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:orientation="horizontal" >
	
	        <ImageView
	            android:id="@+id/imageView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:src="@drawable/add_tile"
	            android:contentDescription="@string/addItem_desc"
	            tools:ignore="NestedWeights" />
	
	        <ImageView
	            android:id="@+id/imageView2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:src="@drawable/add_tile" 
	            android:contentDescription="@string/addItem_desc"/>
	
	        <ImageView
	            android:id="@+id/imageView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:contentDescription="@string/addItem_desc"
	            android:src="@drawable/add_tile" />
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:orientation="horizontal" >
	
	        <ImageView
	            android:id="@+id/imageView4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:src="@drawable/add_tile"
	            android:contentDescription="@string/addItem_desc"
	            tools:ignore="NestedWeights" />
	
	        <ImageView
	            android:id="@+id/imageView5"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:contentDescription="@string/addItem_desc"
	            android:src="@drawable/add_tile" />
	
	        <ImageView
	            android:id="@+id/imageView6"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:contentDescription="@string/addItem_desc"
	            android:src="@drawable/add_tile" />
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:orientation="horizontal" >
	
	        <ImageView
	            android:id="@+id/imageView7"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:contentDescription="@string/addItem_desc"
	            android:src="@drawable/add_tile"
	            tools:ignore="NestedWeights" />
	
	        <ImageView
	            android:id="@+id/imageView8"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:contentDescription="@string/addItem_desc"
	            android:src="@drawable/add_tile" />
	
	        <ImageView
	            android:id="@+id/imageView9"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:contentDescription="@string/addItem_desc"
	            android:src="@drawable/add_tile" />
	    </LinearLayout>
	</LinearLayout>

	<Button
	    android:id="@id/decorate_setBtn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:layout_gravity="center"
	    android:maxWidth="50dp"
	    android:text="@string/decorate_setBtn"
	    android:width="100dp" />

	<LinearLayout
	    android:id="@id/decorate_drawerHolder"
	    android:layout_width="match_parent"
	    android:layout_height="200dp"
	    android:background="#80FFFFFF"
	    android:layout_alignParentBottom="true"
	    android:orientation="vertical" >
	    
	    <TextView
        android:id="@id/decorate_drawerHelper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        
        android:layout_gravity="center"
        android:text="@string/decorate_drawerHelper"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />
	    
	    <ScrollView
	        android:layout_width="match_parent"
	        android:layout_height="match_parent">
	        
	    </ScrollView>
	</LinearLayout>

</RelativeLayout>